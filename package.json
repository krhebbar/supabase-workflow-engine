{
  "name": "supabase-workflow-engine",
  "version": "1.0.0",
  "description": "Production-ready workflow orchestration engine built on PostgreSQL/Supabase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/krhebbar/supabase-workflow-engine"
  },
  "keywords": [
    "workflow",
    "supabase",
    "postgresql",
    "automation",
    "orchestration",
    "database",
    "cron",
    "state-machine",
    "typescript"
  ],
  "author": "Ravindra Kanchikare (krhebbar)",
  "license": "MIT",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "db:reset": "npx supabase db reset",
    "db:migrate": "npx supabase migration up",
    "db:generate-types": "npx supabase gen types typescript --local > src/types/database.types.ts",
    "example:email": "tsx examples/email-workflow/index.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "supabase": "^1.142.2",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    }
  },
  "files": [
    "dist",
    "supabase/migrations",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
